{
	"compilerOptions": {
		"target": "esnext",
		"module": "none",
		"moduleResolution": "node",
		"rootDir": "source",
		"strict": true,
		"sourceMap": true,
		"inlineSources": true,
		"noEmit": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"lib": [ "esnext" ],
	},
	"include": [
		"source/**/*.ts",
	],
}
